<div class="container p-4">
    <div>
        <div class="row">
             <div class="col-md-4 mx-auto" > 
                  <div class="card "> 
                      <div class="card-body"> <h3> Agregar boleto al vuelo</h3>
                          <form action="/links/add-boleto-previo" method="POST">
                          
                              <div class="form-group">
                                  Vuelo
                                  <select type= "text" name="numero_vuelo" class="form-control" placeholder="Numero de Vuelo">
                                      {{#each tabla}}
                                        <option>{{numero_vuelo}}</option>
                                      {{/each}}
                                  </select>
                              </div>
                                  <button class="btn btn-success btn-block">
                                      SAVE
                                  </button>
                               
                          </form>
                      </div>
                 </div>
            </div>
           <div class="col-8">
            <h1>Itinerario vuelos</h1>
            <ul class="list-group">
                {{#each tabla}}
                    <li class="list-group-item">Numero vuelo: {{numero_vuelo}}  [Hora salida: {{hora_salida}} Hora llegada: {{hora_llegada}}] Modelo {{nombre_avion_modelo}} Llegada: {{nombre_aeropuerto}}</li>
                {{/each}}
            </ul>
        </div>
        </div>
    </div>
</div>
