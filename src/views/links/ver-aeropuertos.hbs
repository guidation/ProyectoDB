<div class="container p-4 text-center">
    <h1>Paises</h1>
    <div class="row" > 
        {{#each pais}}
            <div class="col-md-3">
                <div class="card text-center" style = "margin-top: 50px;">
                    <div class="card-body">
                        <a href="{{url}}">
                            <h3 class="card-title text-uppercase">
                                {{nombre_pais}}
                            </h3>
                        </a>
                        <p>
                            <strong>{{codigo_iata_pais}}</strong>
                        </p>
                        <a href="/links/delete-pais/{{id_pais}}" class="btn btn-danger">DELETE</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay paises guardados</p>
                    <a href="/links/add">Guarda uno</a>
                </div>
            </div>
        {{/each}}
    </div>
    <h1  style = "margin-top: 50px;">Ciudades</h1>
    <div class="row">
        {{#each ciudad}}
            <div class="col-md-3">
                <div class="card text-center" style = "margin-top: 50px;">
                    <div class="card-body">
                        <a href="{{url}}">
                            <h3 class="card-title text-uppercase">
                                {{nombre_ciudad}}
                            </h3>
                        </a>
                        <p>
                          <strong>{{codigo_iata_ciudad}}  </strong>
                        </p>
                        <a href="/links/delete-ciudad/{{id_ciudad}}" class="btn btn-danger">DELETE</a>

                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay ciudades guardadas</p>
                    <a href="/links/add">Guarda una</a>
                </div>
            </div>
        {{/each}}
    </div>
    <h1  style = "margin-top: 50px;">Aeropuertos</h1>
    <div class="row">
        {{#each aeropuerto}}
            <div class="col-md-3">
                <div class="card text-center" style = "margin-top: 50px;">
                    <div class="card-body">
                        <a href="{{url}}">
                            <h3 class="card-title text-uppercase">
                                {{nombre_aeropuerto}}
                            </h3>
                        </a>
                        <p>
                          <strong>{{codigo_iata_aeropuerto}}</strong>  
                        </p>
                        <a href="/links/delete-aeropuerto/{{id_aeropuerto}}" class="btn btn-danger">DELETE</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay aeropuertos guardados</p>
                    <a href="/links/add">Guarda uno</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>