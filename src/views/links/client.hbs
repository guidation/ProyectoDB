<div class="container p-4">
    <div>
        <div class="row">
            <div class="col-md-4 mx-auto center">
                <div class="card ">
                    <div class="card-body">
                        <h3>Agregar Cliente</h3>
                        <form action="/links/client-create" method="POST">
                            <div class="form-group">
                                Datos Del Cliente
                            </div>
                            <div class="form-group">
                                <input type="text" name="cedula" class="form-control" placeholder="Cédula De Identidad">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="nombre" placeholder="Nombre">
                            </div>
                            <div class="form-group">
                                <input type="text" name="apellido" class="form-control" placeholder="Apellido">
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" name="correo_electronico" placeholder="Correo Electrónico">
                            </div>
                            <div class="form-group">
                                <input type="text" name="direccion" class="form-control" placeholder="Dirección">
                            </div>
                            <div class="form-group" required="required">
                                <select type="text" name="nombre_ciudad" class="form-control" placeholder="Nombre ciudad">
                                    {{#each ciudad}}
                                    <option>{{nombre_ciudad}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="text" name="numero_telefono" class="form-control" placeholder="Número De Teléfono">
                            </div>
                            <button class="btn btn-success btn-block">
                                SAVE
                            </button>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>