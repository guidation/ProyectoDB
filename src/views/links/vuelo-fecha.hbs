<div class="container p-4 text-center">
    <div class="row">
        <div class="col-4 ">
            <div class="row">
                <h1>Agregar Fecha</h1>
                    <div class = "card" style="width:300px; ">
                        <div class="card-body"> <h3> Seleccionar Ruta</h3>
                            <form action="/links/vuelo-detalles" method="POST">

                                <div class="form-group" required="required">
                                    <select type= "text" name="numero_vuelo" class="form-control" >
                                        {{#each vuelo}}
                                            <option>{{numero_vuelo}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <button class="btn btn-success btn-block">
                                    Continuar
                                </button>
                            </form>
                        </div>
                </div>
            </div>
            <div class="row" style="margin-top: 15px;">
                <div class = "card" style="width:300px; ">
                    <div class="card-body"> <h3> Precio Vuelo</h3>
                        <form action="/links/vuelo-fecha-ver" method="POST">
                            <div class="form-group">
                                    <input type="date" class="form-control" name="fecha_requerida" required="required">
                            </div>
                            <div class="form-group" required="required">
                                <select type= "text" name="origen" class="form-control" >
                                    {{#each airport}}
                                        <option>{{nombre_aeropuerto}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group" required="required">
                                <select type= "text" name="destino" class="form-control" >
                                    {{#each airport}}
                                        <option>{{nombre_aeropuerto}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <button class="btn btn-success btn-block">
                                    Buscar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4 ">
            <h1>Itinerario vuelos</h1>
            <ul class="list-group">
                <ul class="list-group">
                {{#each tabla}}
                    <li class="list-group-item">Numero vuelo: {{numero_vuelo}}  [Hora salida: {{hora_salida}} Hora llegada: {{hora_llegada}}] Modelo {{nombre_avion_modelo}} Llegada: {{nombre_aeropuerto}}</li>
                {{/each}}
                </ul>
            </ul>
            

        </div>
        <div class="col-4 ">
            <h1>Aviones</h1>
            <ul class="list-group">
                <ul class="list-group">
                {{#each avion}}
                    <li class="list-group-item">Matricula: {{matricula_avion}}  Modelo: {{nombre_avion_modelo}}</li>
                {{/each}}
                </ul>
            </ul>
        </div>
            
    </div>
</div>
