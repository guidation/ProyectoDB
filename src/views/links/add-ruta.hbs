<div class="container p-4 text-center">
    <div class="row">
        <div class="col-4 ">
            <div class="row">
                 <div class = "card" style="width:300px; ">
                    <div class="card-body">   <h1>Agregar Ruta</h1> 
                        <form action="/links/add-vuelo" method="POST">
                            <div class="form-group">
                                <input type="number" class="form-control" name="numero_vuelo" placeholder="Numero de vuelo" required="required">
                            </div>
                            <div class="form-group"> Hora Salida
                                <input type="time" class="form-control" name="hora_salida" required="required">
                            </div>
                            <div class="form-group"> Hora Llegada
                                <input type="time" class="form-control" name="hora_llegada" required="required">
                            </div>
                            <div class="form-group">
                                <input type="number" class="form-control" name="duracion_en_minutos"  placeholder="Duracion (minutos)" required="required">
                            </div>
                            <div class="form-group">
                                <input type="number" class="form-control" name="distancia_en_millas"  placeholder="Distancia (millas)" required="required">
                            </div>
                            <div class="form-group" required="required">
                            <div class="form-group"> Destino
                                <input type="text" class="form-control" name="nombre_aeropuerto_llegada" value="{{nombre_aeropuerto_llegada}}"  required="required">
                            </div>
                            <div class="form-group" required="required">
                                <div class="form-group"> Origen
                                <input type="text" class="form-control" name="nombre_aeropuerto_salida"  value="{{nombre_aeropuerto_salida}}" required="required">
                            </div>
                            <div class="form-group" required="required">
                                <select type= "text" name="nombre_avion_modelo" class="form-control" >
                                    {{#each avionsito}}
                                        <option>{{nombre_avion_modelo}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <button class="btn btn-success btn-block">
                                    SAVE
                            </button>
                        </form>
                    </div>
                 </div>
               

            </div>
        </div>
    </div>
</div>