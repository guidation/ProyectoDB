                                {{nombre_avion_modelo}}
                            </h3>
                        </a>
                        <p>
                          {{timeago created_at}}  
                        </p>
                        <a href="/links/delete-modelos/{{id_avion_modelo}}" class="btn btn-danger">DELETE</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay modelos de avion guardados</p>
                    <a href="/links/add">Guarda uno</a>
                </div>
            </div>
        {{/each}}
    </div>
    <h1  style = "margin-top: 50px;">Tipos Combustible</h1>
    <div class="row">
        {{#each gasolina}}
