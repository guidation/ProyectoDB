<div class="container p-4 text-center">
    <h1>Fabricantes</h1>
    <div class="row" > 
        {{#each fabricantes}}
            <div class="col-md-3">
                <div class="card text-center" style = "margin-top: 50px;">
                    <div class="card-body">
                        <a href="{{url}}">
                            <h3 class="card-title text-uppercase">
                                {{nombre_fabricante}}
                            </h3>
                        </a>
                        <p>
                          {{timeago created_at}}  
                        </p>
                        <a href="/links/delete-fabricantes/{{id_fabricante}}" class="btn btn-danger">DELETE</a>
                        <a href="/links/edit-fabricantes/{{id_fabricante}}" class="btn btn-secondary">EDIT</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay aviones guardados</p>
                    <a href="/links/add">Guarda uno</a>
                </div>
            </div>
        {{/each}}
    </div>
    <h1  style = "margin-top: 50px;">Modelos de Avion</h1>
