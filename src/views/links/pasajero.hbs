<div class="container p-4">
    <div>
        <div class="row">
             <div class="col-md-4 mx-auto" > 
                  <div class="card "> 
                      <div class="card-body"> <h3> Agregar pasajero</h3>
                          <form action="/links/add-pasajero" method="POST">
                              <div class="form-group">
                                  <input type="text" class="form-control" name="numero_pasaporte" placeholder="Numero de Pasaporte">
                              </div>
                              <div class="form-group">
                                 <input type= "text" name="nombre" class="form-control" placeholder="Nombre">
                              </div>
                              <div class="form-group">
                                  <input type="text" class="form-control" name="apellido" placeholder="Apellido">
                              </div>
                              <div class="form-group">
                                  <input type= "date" name="fecha_nacimiento" class="form-control" placeholder="Fecha Nacimiento">
                              </div>
                              <div class="form-group">
                              <select type= "text" name="sexo" class="form-control" placeholder="Sexo">
                                        <option>M</option>
                                        <option>F</option>
                                  </select>
                              </div>
                              
                              <div class="form-group">
                                  <select type= "text" name="nombre_pais" class="form-control" placeholder="Pais">
                                      {{#each paises}}
                                        <option>{{nombre_pais}}</option>
                                      {{/each}}
                                  </select>
                              </div>
                                  <button class="btn btn-success btn-block">
                                      SAVE
                                  </button>
                               
                          </form>
                      </div>
                 </div>
            </div>
            <div class="col-8">
            <h1>Pasajeros</h1>
            <ul class="list-group">
                {{#each pasajeros}}
                    <li class="list-group-item">Pasajero: {{apellido}}, {{nombre}}  - Numero Pasaporte: {{numero_pasaporte}} - Sexo: {{sexo}} </li>
                {{/each}}
            </ul>

        </div>
        </div>
    </div>
</div>
