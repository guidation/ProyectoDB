<div class="container p-4 text-center">
     <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="row">
                <div class = "card" style="width:300px; height: 280px;"> 
                    <div class="card-body"> <h3> Agregar Pais</h3>
                        <form action="/links/aeropuertos-pais" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" name="nombre_pais" placeholder="Nombre Pais" required="required">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="codigo_iata_pais" placeholder="Codigo (3)" required="required">
                            </div>
                            <button class="btn btn-success btn-block">
                                    SAVE
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class = "card" style="width:300px; margin-top: 25px;"> 
                    <div class="card-body"> <h3> Agregar Ciudad</h3>
                        <form action="/links/aeropuertos-ciudad" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" name="nombre_ciudad" placeholder="Nombre Ciudad" required="required">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="codigo_iata_ciudad" placeholder="Codigo (3)" required="required">
                            </div>
                            <div class="form-group" required="required">
                                  <select type= "text" name="nombre_pais" class="form-control" placeholder="Nombre Pais">
                                      {{#each pais}}
                                        <option>{{nombre_pais}}</option>
                                      {{/each}}
                                  </select>
                            </div>
                            <button class="btn btn-success btn-block">
                                    SAVE
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mx-auto">
            <div class="row">
                <div class = "card" style="width:300px; ">
                    <div class="card-body"> <h3> Agregar Aeropuerto</h3>
                        <form action="/links/aeropuertos-aeropuerto" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" name="nombre_aeropuerto" placeholder="Nombre Aeropuerto" required="required">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="codigo_iata_aeropuerto" placeholder="Codigo (3)" required="required">
                            </div>
                            <div class="form-group" required="required">
                                  <select type= "text" name="nombre_ciudad" class="form-control" placeholder="Nombre ciudad">
                                      {{#each ciudad}}
                                        <option>{{nombre_ciudad}}</option>
                                      {{/each}}
                                  </select>
                            </div>
                            <button class="btn btn-success btn-block">
                                    SAVE
                            </button>
                        </form>
                    </div>
                </div> 
            </div>
            <div class="row">
                <div class = "card" style="width:300px; margin-top: 25px;">
                    <div class="card-body"> <h3> Agregar Pista</h3>
                        <form action="/links/aeropuertos-pista" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" name="nombre_pista_aterrizaje" placeholder="Nombre Pista" required="required">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="longitud_pista_aterrizaje" placeholder="Longitud pista (metros)" required="required">
                            </div>
                            <div class="form-group" required="required">
                                    <select type= "text" name="nombre_aeropuerto" class="form-control">
                                        {{#each aeropuerto}}
                                        <option>{{nombre_aeropuerto}}</option>
                                        {{/each}}
                                    </select>
                            </div>
                            <button class="btn btn-success btn-block">
                                    SAVE
                            </button>
                        </form>
                    </div>
                </div> 
            </div>
        </div>
     </div>
</div>